<br>
<form action="/user/new-event" method="POST">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>">

  <div class="form-group">
  <label for="title">Title</label>
    <input 
      type="text" 
      id="title" 
      name="title"
      value="<%= typeof formData !== 'undefined' ? formData.title || '' : '' %>"
      placeholder="Enter your title here"
      required
    >
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input 
      type="text" 
      id="description" 
      name="description"
      value="<%= typeof formData !== 'undefined' ? formData.description || '' : '' %>"
      placeholder="Enter your description"
      required
    >
  </div>
  <div class="form-group">
    <label for="duedate">What day is this event happening?</label>
    <input type="date" id="duedate" name="duedate" required>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn primary-btn">Create New Event</button>
  </div>
</form>